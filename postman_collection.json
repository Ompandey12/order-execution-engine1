{
  "info": {
    "name": "Order Execution Engine - Complete Collection",
    "_postman_id": "order-exec-engine-v2",
    "description": "Comprehensive collection for testing the Order Execution Engine with market orders, WebSocket streaming, and concurrent submissions.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "default"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        },
        "description": "Check if the server is running"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has status ok', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('ok');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Market Order - Sell SOL",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"baseToken\": \"SOL\",\n  \"quoteToken\": \"USDC\",\n  \"side\": \"sell\",\n  \"amountIn\": 1.5,\n  \"slippageBps\": 100\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "orders",
            "execute"
          ]
        },
        "description": "Create a market sell order for 1.5 SOL with 1% slippage tolerance"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has orderId', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('orderId');",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData).to.have.property('wsUrl');",
              "    ",
              "    // Save orderId for WebSocket connection",
              "    pm.collectionVariables.set('orderId', jsonData.orderId);",
              "});",
              "",
              "pm.test('Status is pending', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('pending');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Market Order - Buy SOL",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"baseToken\": \"SOL\",\n  \"quoteToken\": \"USDC\",\n  \"side\": \"buy\",\n  \"amountIn\": 100,\n  \"slippageBps\": 150\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "orders",
            "execute"
          ]
        },
        "description": "Create a market buy order for 100 USDC worth of SOL with 1.5% slippage"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response structure is valid', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.orderId).to.be.a('string');",
              "    pm.expect(jsonData.wsUrl).to.include('/ws/orders/');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Market Order - Different Token Pair",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"baseToken\": \"ETH\",\n  \"quoteToken\": \"USDT\",\n  \"side\": \"sell\",\n  \"amountIn\": 0.5,\n  \"slippageBps\": 200\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "orders",
            "execute"
          ]
        },
        "description": "Create a market sell order for ETH/USDT pair with 2% slippage"
      },
      "response": []
    },
    {
      "name": "Invalid Order - Missing Fields",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"baseToken\": \"SOL\",\n  \"side\": \"buy\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "orders",
            "execute"
          ]
        },
        "description": "Test validation - missing required fields (quoteToken, amountIn)"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 400', function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test('Error message is present', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('error');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Invalid Order - Wrong Side Value",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"baseToken\": \"SOL\",\n  \"quoteToken\": \"USDC\",\n  \"side\": \"invalid\",\n  \"amountIn\": 1.0\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "orders",
            "execute"
          ]
        },
        "description": "Test validation - invalid side value (must be 'buy' or 'sell')"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 400', function () {",
              "    pm.response.to.have.status(400);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Concurrent Orders - 5 Simultaneous",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"baseToken\": \"SOL\",\n  \"quoteToken\": \"USDC\",\n  \"side\": \"{{$randomArrayElement(['buy', 'sell']}}\",\n  \"amountIn\": {{$randomInt}},\n  \"slippageBps\": 100\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "orders",
            "execute"
          ]
        },
        "description": "Use Postman Collection Runner to execute this 5 times rapidly to test concurrent processing"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Order created successfully', function () {",
              "    pm.response.to.have.status(201);",
              "    var jsonData = pm.response.json();",
              "    console.log('Created order:', jsonData.orderId);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ]
}